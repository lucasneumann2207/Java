package application;

import java.util.Scanner;

public class Calculadore_NEW {

public static void main(String[] args) {
		
		Scanner sc = new Scanner (System.in);
		
		System.out.println("Entre com o número 1: ");
		double num1 = sc.nextDouble();
		System.out.println("Entre com o número 2: ");
		double num2 = sc.nextDouble();
		System.out.println("entre com o operador: ");
		System.out.println("Use * para multiplicar");
		System.out.println("Use / para dividir");
		System.out.println("Use - para subtrair");
		System.out.println("use + para Somar");
		String operador = sc.next();
		sc.nextLine();
		
		if (operador.equals("+")) {
			double resultado = num1 + num2;
			System.out.println("O valor da soma é: " + resultado);
		} else if (operador.equals("-")) {
			double resultado = num1 - num2;
			System.out.println("O valor da subtração é: " + resultado);
		} else if (operador.equals("*")) {
			double resultado = num1 * num2;
			System.out.println("O valor da Multiplicação é: " + resultado);
		} else if (operador.equals("/")) {
			double resultado = num1 / num2;
			System.out.println("O valor da divisão é: " + resultado);
		}
		
				
		sc.close();

	}
}
